<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="#1FBFA3"
     android:id="@+id/lyt_bg"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_flag"
            android:src="@drawable/ch"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geneva"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/main_grey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_f_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/main_grey" />



            <ImageView
                android:id="@+id/img_f_icon"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/w_small_clear" />


        <TextView
            android:id="@+id/tv_f_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 °C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_grey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_f_maxmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="-1°/5°"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/main_grey"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>

